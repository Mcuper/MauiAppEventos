<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppEventos.ResumoEventoPage"
    Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
  
            <Label Text="{Binding Nome}" FontSize="20" />
            <Label Text="{Binding Local}" />

            <Label Text="{Binding DataInicio, StringFormat='Data de Início: {0:dd/MM/yyyy}'}" />
            <Label Text="{Binding DataTermino, StringFormat='Data de Término: {0:dd/MM/yyyy}'}" />

            <Label Text="{Binding DuracaoDias, StringFormat='Duração: {0} dia(s)'}" />
            <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" />
            <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: R$ {0:F2}'}" />
            <Label Text="{Binding CustoTotal, StringFormat='Custo Total: R$ {0:F2}'}" FontAttributes="Bold" />

            <Button Text="Voltar"
                    Clicked="OnVoltarClicked"
                    BackgroundColor="Magenta"
                    TextColor "White"
                    CornerRadius="10"
                    Padding="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>