<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppEventos.CadastroEventoPage"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    Title="Cadastro de Evento"
    BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="Cadastro de Evento"
                   TextColor="White"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Nome do evento:" TextColor="White" />
            <Entry Text="{Binding Nome}"
                   Placeholder="Insira o nome do evento"
                   TextColor="White"
                   PlaceholderColor="#AAAAAA"
                   BackgroundColor="#1E1E1E"
                   Margin="0,0,0,10" />

            <!-- Datas alinhadas -->
            <HorizontalStackLayout Spacing="20">
                <VerticalStackLayout>
                    <Label Text="Data de início:" TextColor="White" />
                    <DatePicker Date="{Binding DataInicio}"
                                MinimumDate="{x:Static sys:DateTime.Now}"
                                TextColor="White"
                                BackgroundColor="#1E1E1E" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Data de término:" TextColor="White" />
                    <DatePicker Date="{Binding DataTermino}"
                                TextColor="White"
                                BackgroundColor="#1E1E1E" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Número de participantes -->
            <Label Text="Número de participantes:" TextColor="White" />
            <Entry Text="{Binding NumeroParticipantes}"
                   Keyboard="Numeric"
                   TextColor="White"
                   Placeholder="Ex.: 50"
                   PlaceholderColor="#AAAAAA"
                   BackgroundColor="#1E1E1E" />

            <!-- Local -->
            <Label Text="Local do evento:" TextColor="White" />
            <Entry Text="{Binding Local}"
                   TextColor="White"
                   Placeholder="Ex.: Auditório Central"
                   PlaceholderColor="#AAAAAA"
                   BackgroundColor="#1E1E1E" />

            <!-- Custo -->
            <Label Text="Custo por participante:" TextColor="White" />
            <Entry Text="{Binding CustoPorParticipante}"
                   Keyboard="Numeric"
                   TextColor="White"
                   Placeholder="Ex.: 100,00"
                   PlaceholderColor="#AAAAAA"
                   BackgroundColor="#1E1E1E" />

            <!-- Botão estilizado -->
            <Button Text="Cadastrar Evento"
                    Clicked="OnCadastrarEventoClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>